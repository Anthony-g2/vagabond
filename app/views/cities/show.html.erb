<h1><%= @city.name %></h1>
<img src= "<%= @city.image %>" >
<% if session[:user_id] == nil %>
  <button class="btn waves-effect waves-light"><%= link_to "Add New Post", root_path %></button>
<% else %>
  <button class="btn waves-effect waves-light"><%= link_to "Add New Post", user_path(session[:user_id]) %></button>
<% end %>

<% @posts.sort_by(&:created_at) %>

<%  @posts.each do |post| %>
  <h5> <%= link_to post.title, post_path(post) %> </h5>
  <p> <%= post.message%> </p>
  <span>
    <small class="right-align"><%= post.created_at.strftime("Posted on %b %-d, %Y")%></small>
  </span>
  <div class="divider"></div>
  <% end %>
