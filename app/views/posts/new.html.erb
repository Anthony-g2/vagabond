<div class="page_body container">
  <h1>Create a New Post</h1>
  <% flash.each do |name, msg| %>
   <p>
     <%= name.capitalize %>: <%= msg %>
   </p>
   <% end %>
  <%= form_for @post do |f| %>
    <div>
      <%= f.text_field :title, placeholder: "Title" %>
    </div>
    <div>
      <%= f.text_area :message, placeholder: "Message", class: "text_box" %>
    </div>
    <%= f.submit class: "btn waves-effect waves-light" %>
  <% end %>
  <br>
  <% @city = City.find_by_id(session[:last_city_id]) %>
  <%= link_to material_icon.arrow_back, city_path(@city) %>
</div>
