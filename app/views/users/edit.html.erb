<div class="page_body container">
  <h1> Edit User </h1>
  <hr>
  <%= form_for @user do |f| %>
    <div>
      <%= f.text_field :name, placeholder: 'Name' %>
    </div>
    <div>
      <%= f.text_field :current_city, placeholder: 'Current City' %>
    </div>
    <div>
      <%= f.text_field :image, placeholder: 'Profile Picture URL' %>
    </div>

    <%= f.submit 'Save Changes', class: "btn waves-effect waves-light" %>
  <% end %>
  <br>
  <%= link_to material_icon.arrow_back, user_path(@user) %>

</div>
