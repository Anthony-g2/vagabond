<h1> Edit User </h1>
<hr>
<%= form_for @user do |f| %>
  <div>
    <%= f.text_field :name, placeholder: 'Name' %>
  </div>
  <div>
    <%= f.text_field :current_city, placeholder: 'Current City' %>
  </div>
  <div>
    <%= f.text_field :image, placeholder: 'Profile Picture Url' %>
  </div>
  <%= f.submit 'Save Changes' %>
<% end %>

<%= link_to "Back", user_path(@user) %>
