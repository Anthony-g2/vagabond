<div class="page_body container">
  <h1> Create User </h1>
  <hr>
  <%= form_for @user do |f| %>
    <div>
      <%= f.text_field :name, placeholder: 'Name' %>
    </div>
    <div>
      <%= f.text_field :current_city, placeholder: 'Current City' %>
    </div>
    <div>
      <%= f.text_field :image, placeholder: 'Profile Picture Url' %>
    </div>
    <div>
      <%= f.email_field :email, placeholder: 'Email Address' %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: 'Password' %>
    </div>
    <%= f.submit 'Sign Up', class: "btn waves-effect waves-light" %>
  <% end %>
</div>
